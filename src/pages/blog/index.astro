---
import { getCollection } from 'astro:content';
import Layout from '#/layouts/Layout.astro';

const posts = await getCollection('blog', ({ data }) => !data.draft);
const sortedPosts = posts.sort(
  (a, b) => b.data.date.getTime() - a.data.date.getTime()
);
---

<Layout title="Blog | Portfolio">
  <section class="py-32 pt-40">
    <div class="max-w-7xl mx-auto px-8">
      <h1 class="text-6xl md:text-8xl uppercase mb-4">Blog</h1>
      <p class="text-xl text-text-muted max-w-xl mb-16">
        Thoughts on design, development, and everything in between.
      </p>

      <div class="flex flex-col gap-8">
        {
          sortedPosts.map((post) => (
            <article class="bg-bg-alt border-2 border-border rounded-xl hover:-translate-x-1 hover:-translate-y-1 hover:shadow-[8px_8px_0_var(--color-border)] transition-all overflow-hidden">
              <a
                href={`/blog/${post.slug}`}
                class="block p-8 border-0 hover:bg-transparent hover:text-inherit"
              >
                <div class="flex items-center gap-4 mb-2">
                  <time class="font-mono text-xs tracking-widest text-text-muted uppercase">
                    {post.data.date.toLocaleDateString("en-US", {
                      year: "numeric",
                      month: "short",
                      day: "numeric",
                    })}
                  </time>
                  {post.data.tags && post.data.tags.length > 0 && (
                    <div class="flex gap-2">
                      {post.data.tags.map((tag) => (
                        <span class="font-mono text-[0.65rem] px-2 py-0.5 border border-border-light rounded-md uppercase">
                          {tag}
                        </span>
                      ))}
                    </div>
                  )}
                </div>
                <h2 class="text-2xl font-mono font-bold mb-2">
                  {post.data.title}
                </h2>
                {post.data.description && (
                  <p class="text-text-muted mb-4">{post.data.description}</p>
                )}
                <span class="font-mono text-sm uppercase tracking-wide text-primary">
                  Read More â†’
                </span>
              </a>
            </article>
          ))
        }
      </div>
    </div>
  </section>
</Layout>
