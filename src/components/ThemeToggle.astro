---
import { Moon, Sun } from 'lucide-astro';
import { Button } from '@base-ui/react';
---

<Button
  id="theme-toggle"
  className="flex items-center justify-center w-9 h-9 rounded-full border-0 hover:bg-primary hover:text-white transition-colors"
  aria-label="Toggle theme"
>
  <Sun id="sun-icon" class="w-4 h-4 hidden"/>
  <Moon id="moon-icon" class="w-4 h-4"/>
</Button>

<script>
  const themeToggle = document.getElementById('theme-toggle');
  const sunIcon = document.getElementById('sun-icon');
  const moonIcon = document.getElementById('moon-icon');
  const html = document.documentElement;

  // Check for saved theme preference or default to system preference
  const getTheme = (): 'light' | 'dark' => {
    const saved = localStorage.getItem('theme');
    if (saved === 'light' || saved === 'dark') return saved;
    return window.matchMedia('(prefers-color-scheme: dark)').matches
      ? 'dark'
      : 'light';
  };

  const setTheme = (theme: 'light' | 'dark') => {
    html.classList.remove('light', 'dark');
    html.classList.add(theme);
    localStorage.setItem('theme', theme);

    // Update icons
    if (theme === 'dark') {
      sunIcon?.classList.remove('hidden');
      moonIcon?.classList.add('hidden');
    } else {
      sunIcon?.classList.add('hidden');
      moonIcon?.classList.remove('hidden');
    }
  };

  // Initialize theme
  setTheme(getTheme());

  // Toggle on click
  themeToggle?.addEventListener('click', () => {
    const current = html.classList.contains('dark') ? 'dark' : 'light';
    setTheme(current === 'dark' ? 'light' : 'dark');
  });
</script>
